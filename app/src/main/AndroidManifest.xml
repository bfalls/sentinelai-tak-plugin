<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sentinelai.tak.plugin">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:label="@string/app_name"
        android:icon="@android:drawable/sym_def_app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.SentinelAI">

        <service
            android:name=".SentinelAiPluginService"
            android:exported="true">

            <intent-filter>
                <action android:name="com.atakmap.android.PLUGIN" />
                <action android:name="com.atakmap.android.plugin.SERVICE" />
            </intent-filter>

            <meta-data
                android:name="pluginName"
                android:value="SentinelAI" />

            <meta-data
                android:name="pluginDescription"
                android:value="Mission analysis powered by live signals and contextual intelligence." />

            <meta-data
                android:name="pluginVersion"
                android:value="0.1.1" />
        </service>

        <activity
            android:name="com.sentinelai.tak.plugin.SentinelSettingsActivity"
            android:exported="false"
            android:label="@string/sentinel_settings_title" />

        <activity
            android:name="com.sentinelai.tak.plugin.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
